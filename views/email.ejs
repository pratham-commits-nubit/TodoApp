<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        main {
            margin-top: 14vh;
            border-radius: 15px;
            height: 60vh;
            width: 25vw;
            background: white;
            padding: 2vw;
        }
        .otp-input-field div {
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            top: 5vh;
        }
        .otp-input-field {
            display: grid;
            justify-content: center;
        }
        .otp-input-field input[type="tel"] {
            width: 40px;
            height: 40px;
            font-size: 24px;
            text-align: center;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin: 10px;
        }
        .otp-input-field input[type="tel"]:focus {
            border-color: #aaa;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .otp-input-field-container {
            max-width: 300px;
            background-color: #f7f7f7;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .otp-input-field-container input[type="tel"] {
            width: 40px;
            height: 40px;
            font-size: 24px;
            text-align: center;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin: 10px;
        }
        .otp-input-field-container input[type="tel"]:focus {
            border-color: #aaa;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        body {
            background: red;
            display: grid;
            position: relative;
            justify-items: center;
            align-items: center;
        }
        button {
            width: 95%;
            height: 5vh;
            background: red;
            border-radius: 5px;
            border: none;
            color: white;
            position: relative;
            top: 2vh;
        }
        img {
            width: 25%;
        }
        div {
            display: flex;
            justify-content: center;
        }
        a {
            position: relative;
            top: 3vh;
            text-align: center;
        }
        p {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            max-width: 100%;
            height: auto;
        }
        .message {
            border: 1px solid red;
            background: rgba(255, 0, 0, 0.178);
            color: red;
            display: grid;
            justify-content: center;
        }
        @media (max-width: 700px) {
            button{
                width: 85%;
            }
            p{
                font-size: medium;
            }
            main{
                width: 80%;
            }
        }
    </style>
</head>
<body>
    <main>
        <div>
            <img src="images/email.gif" alt="Email GIF">
        </div>
        <form class="otp-input-field" method="post" action="/email/verify">
            <div>
                <input name="code_1" type="tel" id="otp-input-1" maxlength="1" value="" required />
                <input name="code_2" type="tel" id="otp-input-2" maxlength="1" value="" required />
                <input name="code_3" type="tel" id="otp-input-3" maxlength="1" value="" required />
                <input name="code_4" type="tel" id="otp-input-4" maxlength="1" value="" required />
            </div>
            <div style="display: flex; justify-content: center; flex-direction: column;">
                <p style="margin-top: 5vh; text-align: center;"></p>
                <button class="button">Verify</button>
                <p style="text-align: center;">Check your Email-Box and Spam Folder and enter the OTP.</p>
            </div>
            <% if (msg && msg.length > 0) { %>
                <div class="message">
                  <p><%= msg %></p>
                </div>
              <% }  %>              
        </form>
    </main>
    <script>
        const inputs = document.querySelectorAll('input[type="tel"]');
        inputs.forEach((element, index) => {
            element.addEventListener('input', (event) => {
                const input = event.target;
                if (input.value.length === 1 && index < inputs.length - 1) {
                    inputs[index + 1].focus();
                }
            });
            element.addEventListener('keydown', (event) => {
                const input = event.target;
                if (event.key === 'Backspace' && input.value === '' && index > 0) {
                    inputs[index - 1].focus();
                }
            });
        });

        // Optional: Auto focus on the first input
        inputs[0].focus();
    </script>
</body>
</html>
